{
  "name": "kora-reclaim-bot",
  "version": "1.0.0",
  "description": "Automated rent-reclaim bot for Kora-sponsored Solana accounts",
  "main": "dist/index.js",
  "bin": {
    "kora-reclaim": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npx ts-node src/index.ts",
    "start": "node dist/index.js",
    "cli": "npx ts-node src/cli/index.ts",
    "bot": "npx ts-node src/service/index.ts",
    "service": "npx ts-node src/service/index.ts",
    "dashboard": "npx ts-node src/dashboard/server.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "demo:setup": "npx ts-node scripts/demo-setup.ts",
    "demo:close": "npx ts-node scripts/demo-close-account.ts"
  },
  "keywords": [
    "solana",
    "kora",
    "rent",
    "reclaim",
    "bot",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bs58": "^5.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "ora": "^5.4.1",
    "sql.js": "^1.10.2",
    "table": "^6.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
