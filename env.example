# Solana Configuration
SOLANA_NETWORK=devnet
# RPC URLs - use your own for better performance
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Kora Node Configuration
# Option 1: Direct signer address (if you know it from your signers.toml)
KORA_SIGNER_PUBKEY=
# Option 2: Kora RPC URL (bot will fetch the signer address automatically)
KORA_RPC_URL=

# Operator Configuration
# Path to your keypair file (the operator's wallet)
OPERATOR_KEYPAIR_PATH=./keypair.json

# Treasury Configuration
# Where reclaimed SOL should be sent (defaults to operator wallet if empty)
TREASURY_PUBKEY=

# Monitoring Configuration
# How often to check accounts (in minutes)
MONITOR_INTERVAL_MINUTES=5
# Minimum days an account must be closed before reclaiming
MIN_DORMANCY_DAYS=7
# Minimum lamports threshold for reclaim (to avoid dust)
MIN_RECLAIM_LAMPORTS=100000

# Safety Configuration
# Enable dry-run mode (no actual transactions)
DRY_RUN=true
# Auto-reclaim eligible accounts
AUTO_RECLAIM=false

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ALERTS_ENABLED=false

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_ENABLED=false

# Database Configuration
DATABASE_PATH=./data/kora-reclaim.db

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/kora-reclaim.log
